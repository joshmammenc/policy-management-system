{
  "name": "policy-management-system",
  "version": "1.0.0",
  "description": "Node.js Policy Management System with CSV Upload, Search, and Scheduling",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:services": "jest --testPathPattern=tests/unit/services",
    "test:controllers": "jest --testPathPattern=tests/unit/controllers",
    "test:api": "jest --testPathPattern=tests/integration/api"
  },
  "keywords": [
    "policy",
    "insurance",
    "mongodb",
    "worker-threads",
    "scheduling"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.19.2",
    "mongoose": "^8.1.1",
    "dotenv": "^16.4.5",
    "express-validator": "^7.0.1",
    "multer": "^2.0.0-rc.4",
    "csv-parser": "^3.0.0",
    "xlsx": "^0.18.5",
    "node-cron": "^3.0.3",
    "winston": "^3.13.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "@types/jest": "^29.5.12",
    "mongodb-memory-server": "^9.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/workers/*.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
